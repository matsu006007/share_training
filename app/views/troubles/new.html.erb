<h1>お悩み投稿ページ</h1>

<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<%= link_to "お悩み相談室へ戻る", troubles_path %>

<%= form_with model: @trouble, local: true do |f| %>
  <%= f.text_field :trouble_title, placeholder: "あなたの悩み" %>
  <%= f.text_area :trouble_content, placeholder: "具体的な内容" %>
  <%= f.submit "投稿" %>
<% end %>